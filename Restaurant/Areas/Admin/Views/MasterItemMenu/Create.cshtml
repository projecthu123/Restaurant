@model Restaurant.Areas.Admin.ViewModels.MasterItemMenuModel

@{
    ViewData["Title"] = "Create";
}

<div class="pagetitle">
    <h1>Master Menu Table</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active"><a asp-action="Index" asp-controller="MasterItemMenu">Master Item Menu</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div>
<section class="section dashboard">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Multi Columns Form</h5>
                    <form asp-action="Create" enctype="multipart/form-data" class="row g-3 needs-validation" novalidate="">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-md-6">
                            <label asp-for="MasterCategoryMenulink.MasterCategoryMenuName" class="control-label"></label>
                            <select asp-for="MasterCategoryMenuId" class="form-group form-select" asp-items="@(new SelectList(ViewBag.ListOfCategoryMenu,"MasterCategoryMenuId","MasterCategoryMenuName"))">
                            </select>
                            <span asp-validation-for="MasterCategoryMenuId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="MasterItemMenuTitle" class="control-label"></label>
                            <input asp-for="MasterItemMenuTitle" class="form-control" required="" />
                            <div class="invalid-tooltip">
                                Please Fill This
                            </div>
                            <span asp-validation-for="MasterItemMenuTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="MasterItemMenuBreef" class="control-label"></label>
                            <input asp-for="MasterItemMenuBreef" class="form-control" required="" />
                            <div class="invalid-tooltip">
                                Please Fill This
                            </div>
                            <span asp-validation-for="MasterItemMenuBreef" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="MasterItemMenuDesc" class="control-label"></label>
                            <input asp-for="MasterItemMenuDesc" class="form-control" required="" />
                            <div class="invalid-tooltip">
                                Please Fill This
                            </div>
                            <span asp-validation-for="MasterItemMenuDesc" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="MasterItemMenuPrice" class="control-label"></label>
                            <input asp-for="MasterItemMenuPrice" class="form-control" required="" />
                            <div class="invalid-tooltip">
                                Please Fill This
                            </div>
                            <span asp-validation-for="MasterItemMenuPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Files" class="control-label"></label>
                            <input asp-for="Files" class="form-control" required="" />
                            <div class="invalid-tooltip">
                                Please Fill This
                            </div>
                            <span asp-validation-for="Files" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="MasterItemMenuDate" class="control-label"></label>
                            <input asp-for="MasterItemMenuDate" class="form-control" required="" />
                            <div class="invalid-tooltip">
                                Please Fill This
                            </div>
                            <span asp-validation-for="MasterItemMenuDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="MasterItemMenuInfo" class="control-label"></label>
                            <input asp-for="MasterItemMenuInfo" class="form-control" required="" />
                            <div class="invalid-tooltip">
                                Please Fill This
                            </div>
                            <span asp-validation-for="MasterItemMenuInfo" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>

</section>
<div>
    <a asp-action="Index">Back to List</a>
</div>

