@model Restaurant.Areas.Admin.ViewModels.MasterOfferModel

@{
    ViewData["Title"] = "Create";
}

<div class="pagetitle">
    <h1>Master Menu</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item "><a asp-action="Index" asp-controller="MasterOffer">Master Offer</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>

</div>
<hr />
<section>


    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Multi Columns Form</h5>
                    <form asp-action="Create" class="row g-3 needs-validation" enctype="multipart/form-data" novalidate="">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-md-6">
                            <label asp-for="MasterOfferTitle" class="control-label"></label>
                            <input asp-for="MasterOfferTitle" class="form-control" required="" />
                            <div class="invalid-tooltip">
                                Please Fill This
                            </div>
                            <span asp-validation-for="MasterOfferTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="MasterOfferBreef" class="control-label"></label>
                            <input asp-for="MasterOfferBreef" class="form-control" required="" />
                            <div class="invalid-tooltip">
                                Please Fill This
                            </div>
                            <span asp-validation-for="MasterOfferBreef" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="MasterOfferDesc" class="control-label"></label>
                            <input asp-for="MasterOfferDesc" class="form-control" required="" />
                            <div class="invalid-tooltip">
                                Please Fill This
                            </div>
                            <span asp-validation-for="MasterOfferDesc" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Files" class="control-label"></label>
                            <input asp-for="Files" class="form-control" required="" />
                            <div class="invalid-tooltip">
                                Please Fill This
                            </div>
                            <span asp-validation-for="Files" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

<div>
    <a asp-action="Index">Back to List</a>
</div>

