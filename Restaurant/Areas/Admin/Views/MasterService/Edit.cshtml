@model Restaurant.Areas.Admin.ViewModels.MasterServiceModel

@{
    ViewData["Title"] = "Edit";
}

<div class="pagetitle">
    <h1>Master Service</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item "><a asp-action="Index" asp-controller="MasterService">Master Service</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>

</div>
<hr />
<section>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Multi Columns Form</h5>
                    <form asp-action="Edit" class="row g-3" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MasterServiceId" />
                        <div class="form-group col-md-12">
                            <label asp-for="MasterServicesTitle" class="control-label"></label>
                            <input asp-for="MasterServicesTitle" class="form-control" />
                            <span asp-validation-for="MasterServicesTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="MasterServicesDesc" class="control-label"></label>
                            <input asp-for="MasterServicesDesc" class="form-control" />
                            <span asp-validation-for="MasterServicesDesc" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Icon" class="control-label"></label>
                            <input asp-for="Icon" class="form-control" />
                            <span asp-validation-for="Icon" class="text-danger"></span>
                        </div>
                        <input asp-for="MasterServicesImage" type="hidden"/>
                        <div class="form-group col-md-12">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<div>
    <a asp-action="Index">Back to List</a>
</div>

