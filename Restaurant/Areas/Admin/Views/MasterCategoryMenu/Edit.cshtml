@model Restaurant.Models.MasterCategoryMenu

@{
    ViewData["Title"] = "Edit";
}

<div class="pagetitle">
    <h1>Master Menu</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item "><a asp-action="Index" asp-controller="MasterCategoryMenu">Master Category Menu</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>

</div>
<hr />
<section>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Multi Columns Form</h5>
                    <form asp-action="Edit" class="row g-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MasterCategoryMenuId" />
                        <input type="hidden" asp-for="CreateDate" />
                        <input type="hidden" asp-for="CreateId" />
                        <div class="form-group col-md-6">
                            <label asp-for="MasterCategoryMenuName" class="control-label"></label>
                            <input asp-for="MasterCategoryMenuName" class="form-control" />
                            <span asp-validation-for="MasterCategoryMenuName" class="text-danger"></span>
                        </div>
                     


                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<div>
    <a asp-action="Index">Back to List</a>
</div>
