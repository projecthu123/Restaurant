@model Restaurant.Areas.Admin.ViewModels.MasterCategoryMenuModel

@{
    ViewData["Title"] = "Create";
}

<div class="pagetitle">
    <h1>Master Menu</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item "><a asp-action="Index" asp-controller="MasterCategoryMenu">Master Category Menu</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>

</div><!-- End Page Title -->

<section>


    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Multi Columns Form</h5>
                    <form asp-action="Create" class="row g-3 needs-validation " novalidate="">
